<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/nonCriticalDmgTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="非会心ダメージ"
        android:textColor="#0073FF"
        android:textSize="36sp"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/criticalDmgNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30sp"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/nonCriticalDmgNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30sp"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/exCriticalDmgNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30sp"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/exCriticalDmgNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会心期待値"
        android:textColor="#FF9900"
        android:textSize="36sp"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/criticalDmgNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="会心ダメージ"
        android:textColor="#FF0000"
        android:textSize="36sp"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>